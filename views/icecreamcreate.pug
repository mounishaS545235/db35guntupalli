extends layout

block content
 h1= title

 form(id='icecreamForm', action="/resource/icecream", method="POST")
    div.form-group
        label.icecreamAttr(for='icecream_type') Icecream Flavour
        input#icecream_type(type='text', name='icecream_type')
    div.form-group
        label.icecreamAttr(for='size') Icecream quantity
        input#size(type='number', name='size')
    div.form-group
        label.icecreamAttr(for='cost') Icecream Cost
        input#cost(type='number', name='cost')
    input(type="submit")

 script.
